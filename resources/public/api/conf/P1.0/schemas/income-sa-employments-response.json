{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "SA Employments Income",
  "type": "object",
  "properties": {
    "_links": {
      "type": "object",
      "properties": {
        "self": {
          "type": "object",
          "description": "The URI to this resource",
          "properties": {
            "href": {
              "type": "string",
              "example": "/individuals/income/sa/employments?matchId=57072660-1df9-4aeb-b4ea-cd2d7f96e430&fromTaxYear=2013-14&toTaxYear=2015-16"
            }
          },
          "required": [
            "href"
          ]
        }
      },
      "required": [
        "self"
      ]
    },
    "selfAssessment": {
      "type": "object",
      "properties": {
        "taxReturns": {
          "type": "array",
          "description": "List of self-assessments tax returns in the requested period",
          "items": {
            "type": "object",
            "properties": {
              "taxYear": {
                "type": "string",
                "description": "Tax year",
                "example": "2013-14"
              },
              "employments": {
                "type": "array",
                "description": "Employments income for the tax year",
                "items": {
                  "type": "object",
                  "properties": {
                    "utr": {
                      "type": "string",
                      "description": "The 10 digit self-assessment unique tax reference",
                      "example": "2432552635"
                    },
                    "employmentIncome": {
                      "type": "number",
                      "description": "Employments income",
                      "example": "5000"
                    }
                  },
                  "required": [
                    "employmentIncome"
                  ]
                }
              }
            },
            "required": [
              "taxYear",
              "employments"
            ]
          }
        }
      },
      "required": [
        "taxReturns"
      ]
    }
  },
  "required": [
    "_links",
    "selfAssessment"
  ]
}
