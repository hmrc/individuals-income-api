{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "SA Summary",
  "type": "object",
  "properties": {
    "_links": {
      "type": "object",
      "properties": {
        "self": {
          "type": "object",
          "description": "The URI to this resource",
          "properties": {
            "href": {
              "type": "string",
              "example": "/individuals/income/sa/summary?matchId=57072660-1df9-4aeb-b4ea-cd2d7f96e430&fromTaxYear=2013-14&toTaxYear=2015-16"
            }
          },
          "required": [
            "href"
          ]
        }
      },
      "required": [
        "self"
      ]
    },
    "selfAssessment": {
      "type": "object",
      "properties": {
        "taxReturns": {
          "type": "array",
          "description": "List of self-assessment tax returns summary in the requested period",
          "items": {
            "type": "object",
            "properties": {
              "taxYear": {
                "type": "string",
                "description": "Tax year",
                "example": "2015-16"
              },
              "summary": {
                "type": "array",
                "description": "Tax return summary for the year",
                "items": {
                  "type": "object",
                  "properties": {
                    "totalIncome": {
                      "type": "number",
                      "description": "Income from self employment",
                      "example": "30000"
                    }
                  },
                  "required": [
                    "totalIncome"
                  ]
                }
              }
            },
            "required": [
              "taxYear",
              "summary"
            ]
          }
        }
      },
      "required": [
        "taxReturns"
      ]
    }
  },
  "required": [
    "_links",
    "selfAssessment"
  ]
}
