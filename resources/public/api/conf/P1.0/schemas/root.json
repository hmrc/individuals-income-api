{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Individuals Income",
  "type": "object",
  "properties": {
    "_links": {
      "type": "object",
      "properties": {
        "paye": {
          "type": "object",
          "description": "The URI for the resource to get the individual's income per employment data.",
          "properties": {
            "href": {
             "type": "string",
              "example": "/individuals/income/paye?matchId=57072660-1df9-4aeb-b4ea-cd2d7f96e430{&fromDate,toDate}"
            },
            "title": {
              "type": "string",
              "example": "View individual's income per employment"
            }
          },
          "required": ["href", "title"]
        },
        "selfAssessment": {
          "type": "object",
          "description": "The URI for the resource to get the individual's self-assessment income",
          "properties": {
            "href": {
              "type": "string",
              "example": "/individuals/income/sa?matchId=57072660-1df9-4aeb-b4ea-cd2d7f96e430{&fromTaxYear,toTaxYear}"
            },
            "title": {
              "type": "string",
              "example": "View individual's self-assessment income"
            }
          },
          "required": ["href", "title"]
        },
        "summary": {
          "type": "object",
          "description": "The URI for the resource to get the individual's self-assessment summary",
          "properties": {
            "href": {
              "type": "string",
              "example": "/individuals/income/sa/summary?matchId=57072660-1df9-4aeb-b4ea-cd2d7f96e430{&fromTaxYear,toTaxYear}"
            },
            "title": {
              "type": "string",
              "example": "View individual's self-assessment summary"
            }
          },
          "required": ["href", "title"]
        },
        "self": {
          "type": "object",
          "description": "HAL compliant. Refers to itself",
          "properties": {
            "href": {
              "type": "string",
              "example": "/individuals/income/?matchId=57072660-1df9-4aeb-b4ea-cd2d7f96e430"
            }
          },
          "required": ["href"]
        }
      },
      "required": ["paye", "selfAssessment", "summary", "self"]
    }
  },
  "required": ["_links"]
}
